<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">


    <LinearLayout
        android:id="@+id/filterheaderll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/txtcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancelText"
            android:textColor="#4C94BF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/filtertext"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/applytext"
            android:textColor="#4C94BF"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/datetextll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filterheaderll"
        android:background="@color/login_btn_bg_color"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/datetext"
            android:textColor="#ffffff"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/datefilterll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datetextll"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/filterbydatell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtfilterbydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/filterbydate" />


            <ToggleButton
                android:id="@+id/txtfilterdatetoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn="" />


        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />

        <LinearLayout
            android:id="@+id/startdatell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/startdate" />

            <TextView
                android:id="@+id/txtstartdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="right"
                android:text="25 Oct 2015 05:00 AM" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/startdatell"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/enddate" />

            <TextView
                android:id="@+id/txtenddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:gravity="right"
                android:text="25 Oct 2015 05:00 AM" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/networktextll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datefilterll"
        android:background="@color/login_btn_bg_color"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/networktext"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/socailfilterll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/networktextll"
        android:background="#ffffff"
        android:weightSum="9"
      >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/fb_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fbtext"
                    android:paddingLeft="2dp"
                    android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/fbtoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/twitter_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twittertext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/twittertoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/youtube_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/youtubetext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/youtubetoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/insta_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Instatext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/instatoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/flicker_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flicktext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/filkertoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/tumblr_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tumblrtext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/tumbletoogle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="false"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/vine_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vinetext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/vinetoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/vk_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vktext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/vktoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/d_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distext"
                android:paddingLeft="2dp"
                android:layout_weight="0.5"/>

            <ToggleButton
                android:id="@+id/disquxtoogle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/keywordll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/socailfilterll"
        android:background="@color/login_btn_bg_color"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/keywordtxt"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/keywordll"
        android:background="#FFFFFF">


        <LinearLayout
            android:id="@+id/filterbykeywordll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/filterkeyword" />


            <ToggleButton
                android:id="@+id/filterbykeywordtoggle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:checked="true"
                android:drawableRight="@drawable/toglebtn"
                android:text=""
                android:textOff=""
                android:textOn="" />


        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.5dp"
            android:background="@color/lightGrey" />


    </LinearLayout>


</RelativeLayout>
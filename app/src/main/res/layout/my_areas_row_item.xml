<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/loc_rl"
        android:layout_width="match_parent"
        android:layout_height="130dp"

        android:visibility="visible">

        <ImageView
            android:id="@+id/area_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/demo_loc_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/area_img"
            android:background="#60000000"

            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/loc_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Location Name"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/loc_add_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loc_name_tv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="USA"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/add_area_img"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerInParent="true"

        android:background="@mipmap/add_area"
        android:visibility="gone" />
</RelativeLayout>
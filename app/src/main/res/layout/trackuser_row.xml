<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_weight="0.06">

        <ImageView
            android:id="@+id/trackprofileimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/user"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"

            />

        <LinearLayout
            android:id="@+id/detailll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/trackprofileimage">

            <TextView
                android:id="@+id/txtfolloweduser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followed User"
                />

            <TextView
                android:id="@+id/txtnooffollowed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Followed"/>
            <TextView
                android:id="@+id/txttrackuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Track"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>



    </RelativeLayout>

</LinearLayout>